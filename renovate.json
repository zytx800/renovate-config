{
  "enabled": true,
  "major": {
    "enabled": true
  },
  "separateMajorMinor": true,
  "separateMinorPatch": false,
  "ignoreUnstable": true,
  "prCreation": "immediate",
  "packageRules": [
    {
      "packagePatterns": [
        "*"
      ],
      "semanticCommitType": "chore"
    },
    {
      "depTypeList": [
        "dependencies"
      ],
      "semanticCommitType": "fix"
    }
  ],
  "updateNotScheduled": true,
  "automerge": true,
  "ignorePaths": [
    "**/node_modules/**",
    "**/bower_components/**",
    "**/vendor/**",
    "**/examples/**",
    "**/__tests__/**",
    "**/test/**",
    "**/tests/**"
  ],
  "lockFileMaintenance": {
    "enabled": false
  },
  "rangeStrategy": "bump",
  "prHourlyLimit": 2,
  "prConcurrentLimit": 20,
  "timezone": "Asia/Yangon",
  "schedule": [
    "every weekday",
    "every weekend"
  ],
  "packageFiles": [
    "package.json"
  ]
}